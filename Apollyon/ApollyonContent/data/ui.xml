<?xml version="1.0" encoding="utf-8" ?>

<windows>
  <window>
    <name>Generic Overview</name>
    <type>Overview</type>
    <position>
      <x>640</x>
      <y>10</y>
      <w>200</w>
      <h>200</h>
    </position>
    <tags>
      <tag>ship</tag>
      <tag>item</tag>
